<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".QuizActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_img"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="wrap_content"
        android:text="THERE ARE ONLY FEW QUESTIONS TO CHECK YOUR CURRENT COVID STATUS"
        android:textColor="@color/symtoms"
        android:textSize="24sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioGroup
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="#302C2C"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have you taken the vaccination?"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yes"
                android:text="Yes"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no"
                android:text="No"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </RadioGroup>
        <RadioGroup
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="#302C2C"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you currently experiencing any of the following symptoms?"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Cough"
                android:text="Cough"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fever"
                android:text="Fever"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brething"
                android:text="Difficulty in Breathing"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/smell"
                android:text="Loss of smell and taste"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/none"
                android:text="None of the Above"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </RadioGroup>
        <RadioGroup
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="#302C2C"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you have any of the following pre-existing conditions?"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/diabetes"
                android:text="Diabetes"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lung"
                android:text="Lung disease"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heart"
                android:text="Heart Disease"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/asthma"
                android:text="Asthma"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/none2"
                android:text="None of the Above"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </RadioGroup>
        <RadioGroup
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:background="#302C2C"
            android:layout_height="wrap_content">
            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have you travelled in the past 14 days to any of the states mention in stats?"
                android:textColor="@color/white"
                android:textSize="30sp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/yes2"
                android:text="Yes"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no2"
                android:text="No"
                android:textSize="20sp"
                android:textColor="@color/white"/>
        </RadioGroup>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/result"
        android:text="Get Your result"
        android:background="@drawable/button"
        />

</LinearLayout>
</ScrollView>