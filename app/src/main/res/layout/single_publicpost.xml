<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mypostcv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#6E2823"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignItems="flex_end"
        app:flexWrap="wrap"
        app:justifyContent="flex_end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Name :- "
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/namepost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Aman"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Phone No. :- "
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold|italic" />

                <TextView
                    android:id="@+id/phonenumberpost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="8800856394"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="italic" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Address "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/addresspost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="chhatarput extension"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Message "
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/messagepost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="i need osxygen"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/time"
                android:textColor="@color/white"
                android:text="12:00"
                android:textSize="20dp"
                android:layout_gravity="right"/>
        </LinearLayout>
    </com.google.android.flexbox.FlexboxLayout>
</androidx.cardview.widget.CardView>
