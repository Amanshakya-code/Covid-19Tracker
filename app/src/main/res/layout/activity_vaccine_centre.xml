<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".vaccination.VaccineCentreActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:text="GET YOUR VACCINATION CENTRE"
        android:textColor="@color/black"
        android:paddingTop="20dp"/>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="6"
            android:id="@+id/pincodeedt"
            android:hint="Enter your area pincode"
            android:layout_marginTop="40dp"
            android:padding="10dp"/>
        <Button
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/statistic_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Search"
            android:id="@+id/searchbtncentre"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/upward"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/single_vaccinated_item"
            android:id="@+id/centreRecylerView"/>
        <ProgressBar
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:id="@+id/centerPb"
            android:visibility="gone"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/doctorvector"
            android:layout_marginTop="100dp"
            android:id="@+id/centerdoctorImage"/>

    </FrameLayout>

</LinearLayout>